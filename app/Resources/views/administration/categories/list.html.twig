{% extends "administration/base.html.twig" %}

{% block content %}
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center"><strong>Categories</strong></h2>
            <hr>
        </div>

        <div class="col-lg-6 col-lg-offset-3">
            <table class="table table-bordered admin-table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                    <th>Promotion</th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('categories_remove',{'id':category.id}) }}">Remove</a>
                        </td>
                        <td>
                            <a href="{{ path('admin_category_promotion',{'id':category.id}) }}">Add</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="col-lg-12 text-center">
            <a href="{{ path('categories_create') }}" class="btn btn-primary">Add category</a>
        </div>
    </div>
{% endblock %}