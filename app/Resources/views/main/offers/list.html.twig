{% extends "main/base.html.twig" %}

{% block content %}

    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center"><strong>Offers</strong></h2>
                <hr>
            </div>
            {% for offer in offers %}
                <div class="col-sm-4 text-center">
                    <div class="offer-item">
                        <a href="{{ path('offers_details',{'id':offer.id}) }}">
                            <img class="img-responsive" src="{{ asset('img/5190001_sa.jpg') }}" alt="product-img">
                        </a>
                        <h3>{{ offer.title }}</h3>
                        <p>{{ offer.price }} &dollar;</p>
                    </div>
                </div>
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </div>

{% endblock %}