{% extends 'main/base.html.twig' %}

{% block content %}
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center"><strong>Promotion</strong></h2>
            <h2 class="intro-text text-center ">{{ offer.title }}</h2>
            <hr>
        </div>
        <div class="col-lg-6 col-lg-offset-3">
            {% form_theme promo_form 'bootstrap_3_layout.html.twig' %}
            {{ form_start(promo_form) }}
            {{ form_widget(promo_form) }}
            <input type="submit" class="btn btn-primary" value="Add promotion!" formnovalidate>
            {{ form_end(promo_form) }}
        </div>
    </div>
{% endblock %}