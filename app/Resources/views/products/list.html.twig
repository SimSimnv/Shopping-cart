{% extends "base.html.twig" %}

{% block content %}
    <table border="1" cellpadding="0" cellspacing="0">
        <thead>
        <tr>
            <th>Name</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.quantity }}</td>
                <td>
                    <a href="{{ path('offers_create',{'product_id':product.id}) }}">Sell</a>
                    <a href="{{ path('products_delete',{'id':product.id}) }}">Remove</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('products_create') }}">Add a product!</a>
    </div>
{% endblock %}